{
  // This file is not used in compilation. It is here just for a nice editor experience.
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@theme/*": ["./node_modules/@docusaurus/theme-classic/lib/theme/*"],
      "@site/*": ["./*"]
    },    // other options...
  },
  "include": [
    "src/**/*",
    "src/@types/**/*", // Keep this if you have custom type definitions here
    "docusaurus.config.ts",
    "sidebars.ts"
    // Add other TS files you want checked if necessary
  ],
  "exclude": [".docusaurus", "build", "node_modules"] // Added node_modules explicitly just in case
}